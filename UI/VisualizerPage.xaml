<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluetoothMicrophoneApp.UI.VisualizerPage"
             Title="Live Visualizer">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0A0E27" Offset="0.0" />
            <GradientStop Color="#1A1A3E" Offset="0.3" />
            <GradientStop Color="#2D2D58" Offset="0.7" />
            <GradientStop Color="#1A1A3E" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Padding="20" RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,30">
            <Label Text="ðŸ“Š Live Visualizer"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />
            <Label Text="Sound waves reacting to your voice"
                   FontSize="14"
                   TextColor="#8E8E93"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Visualizer Area -->
        <Border Grid.Row="1"
                BackgroundColor="#1A1A2E"
                Stroke="#3A3A50"
                StrokeThickness="1"
                Padding="20">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="#000000"
                        Offset="0,8"
                        Radius="20"
                        Opacity="0.3" />
            </Border.Shadow>

            <Grid RowDefinitions="*,Auto,Auto">

                <!-- Animated Mic Icon -->
                <Grid Grid.Row="0" VerticalOptions="Center">
                    <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

                        <!-- Outer glow ring -->
                        <Ellipse x:Name="OuterGlow"
                                 WidthRequest="200"
                                 HeightRequest="200"
                                 Fill="Transparent"
                                 Stroke="#5B8FFF"
                                 StrokeThickness="2"
                                 Opacity="0.3"
                                 HorizontalOptions="Center" />

                        <!-- Middle glow ring -->
                        <Ellipse x:Name="MiddleGlow"
                                 WidthRequest="160"
                                 HeightRequest="160"
                                 Fill="Transparent"
                                 Stroke="#7B6BFF"
                                 StrokeThickness="3"
                                 Opacity="0.5"
                                 HorizontalOptions="Center"
                                 Margin="0,-180,0,0" />

                        <!-- Microphone Icon -->
                        <Label Text="ðŸŽ¤"
                               FontSize="72"
                               HorizontalOptions="Center"
                               Margin="0,-140,0,0" />

                        <!-- Status Label -->
                        <Label x:Name="StatusLabel"
                               Text="Ready"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#5B8FFF"
                               HorizontalOptions="Center"
                               Margin="0,80,0,0" />
                    </VerticalStackLayout>
                </Grid>

                <!-- On Air Indicator -->
                <Border Grid.Row="1"
                        x:Name="OnAirIndicator"
                        BackgroundColor="#FF5252"
                        Padding="15,10"
                        HorizontalOptions="Center"
                        IsVisible="False"
                        Margin="0,20,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#FF5252"
                                Offset="0,4"
                                Radius="20"
                                Opacity="0.6" />
                    </Border.Shadow>
                    <Label Text="ðŸ”´ ON AIR"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Border>

                <!-- Volume Meter -->
                <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,30,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label Text="ðŸ”‡"
                               FontSize="20"
                               VerticalOptions="Center" />

                        <ProgressBar x:Name="VolumeMeter"
                                     Grid.Column="1"
                                     Progress="0"
                                     ProgressColor="#5B8FFF"
                                     HeightRequest="10"
                                     VerticalOptions="Center"
                                     Margin="10,0" />

                        <Label Text="ðŸ”Š"
                               Grid.Column="2"
                               FontSize="20"
                               VerticalOptions="Center" />
                    </Grid>
                </VerticalStackLayout>

            </Grid>
        </Border>

        <!-- Control Buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,20,0,0">
            <Border Grid.Column="0"
                    x:Name="ToggleButton"
                    StrokeThickness="0"
                    BackgroundColor="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="22" />
                </Border.StrokeShape>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4CAF50" Offset="0.0" />
                        <GradientStop Color="#45A049" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnToggleClicked" />
                </Border.GestureRecognizers>
                <Label x:Name="ToggleLabel"
                       Text="â–¶ Start"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Padding="0,16" />
            </Border>

            <Border Grid.Column="1"
                    Stroke="#8E8E93"
                    StrokeThickness="2"
                    BackgroundColor="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="22" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked" />
                </Border.GestureRecognizers>
                <Label Text="â† Back"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#8E8E93"
                       HorizontalOptions="Center"
                       Padding="0,16" />
            </Border>
        </Grid>

    </Grid>
</ContentPage>
