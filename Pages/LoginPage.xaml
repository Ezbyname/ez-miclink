<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluetoothMicrophoneApp.Pages.LoginPage"
             BackgroundColor="#0A0E27">

	<ContentPage.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
			<GradientStop Color="#0A0E27" Offset="0.0" />
			<GradientStop Color="#1A1A3E" Offset="0.5" />
			<GradientStop Color="#2D2D58" Offset="1.0" />
		</LinearGradientBrush>
	</ContentPage.Background>

	<ScrollView>
		<VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

			<!-- Logo/Title -->
			<VerticalStackLayout Spacing="10" Margin="0,0,0,40">
				<Label Text="ðŸŽ¤"
				       FontSize="64"
				       HorizontalOptions="Center" />

				<Label Text="E-z MicLink"
				       FontSize="36"
				       FontAttributes="Bold"
				       TextColor="White"
				       HorizontalOptions="Center" />

				<Label Text="Connect your microphone wirelessly"
				       FontSize="14"
				       TextColor="#9999AA"
				       HorizontalOptions="Center"
				       Margin="0,5,0,0" />
			</VerticalStackLayout>

			<!-- Phone Number Login -->
			<Border x:Name="PhoneLoginButton"
			        StrokeThickness="0"
			        BackgroundColor="#1E88E5"
			        Padding="15"
			        Margin="0,10,0,0">
				<Border.StrokeShape>
					<RoundRectangle CornerRadius="12" />
				</Border.StrokeShape>
				<Border.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnPhoneLoginClicked" />
				</Border.GestureRecognizers>

				<Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
					<Label Grid.Column="0"
					       Text="ðŸ“±"
					       FontSize="24"
					       VerticalOptions="Center" />

					<Label Grid.Column="1"
					       Text="Continue with Phone Number"
					       TextColor="White"
					       FontSize="16"
					       FontAttributes="Bold"
					       VerticalOptions="Center" />
				</Grid>
			</Border>

			<!-- Divider -->
			<Grid ColumnDefinitions="*,Auto,*" Margin="0,20,0,10">
				<BoxView Grid.Column="0"
				         HeightRequest="1"
				         Color="#333"
				         VerticalOptions="Center" />
				<Label Grid.Column="1"
				       Text="or"
				       TextColor="#666"
				       FontSize="14"
				       Margin="15,0" />
				<BoxView Grid.Column="2"
				         HeightRequest="1"
				         Color="#333"
				         VerticalOptions="Center" />
			</Grid>

			<!-- Google Login -->
			<Border x:Name="GoogleLoginButton"
			        StrokeThickness="1"
			        Stroke="#333"
			        BackgroundColor="#FFFFFF"
			        Padding="15">
				<Border.StrokeShape>
					<RoundRectangle CornerRadius="12" />
				</Border.StrokeShape>
				<Border.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnGoogleLoginClicked" />
				</Border.GestureRecognizers>

				<Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
					<Label Grid.Column="0"
					       Text="G"
					       FontSize="20"
					       FontAttributes="Bold"
					       TextColor="#DB4437"
					       VerticalOptions="Center"
					       HorizontalOptions="Center"
					       WidthRequest="24" />

					<Label Grid.Column="1"
					       Text="Continue with Google"
					       TextColor="#000"
					       FontSize="16"
					       FontAttributes="Bold"
					       VerticalOptions="Center" />
				</Grid>
			</Border>

			<!-- Apple Login -->
			<Border x:Name="AppleLoginButton"
			        StrokeThickness="1"
			        Stroke="#333"
			        BackgroundColor="#000000"
			        Padding="15">
				<Border.StrokeShape>
					<RoundRectangle CornerRadius="12" />
				</Border.StrokeShape>
				<Border.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnAppleLoginClicked" />
				</Border.GestureRecognizers>

				<Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
					<Label Grid.Column="0"
					       Text=""
					       FontSize="24"
					       TextColor="White"
					       VerticalOptions="Center" />

					<Label Grid.Column="1"
					       Text="Continue with Apple"
					       TextColor="White"
					       FontSize="16"
					       FontAttributes="Bold"
					       VerticalOptions="Center" />
				</Grid>
			</Border>

			<!-- Guest Login -->
			<Border x:Name="GuestButton"
			        StrokeThickness="1"
			        Stroke="#4A90E2"
			        BackgroundColor="Transparent"
			        Padding="15"
			        Margin="0,30,0,0">
				<Border.StrokeShape>
					<RoundRectangle CornerRadius="12" />
				</Border.StrokeShape>
				<Border.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnGuestClicked" />
				</Border.GestureRecognizers>

				<Label Text="Continue as Guest"
				       TextColor="#4A90E2"
				       FontSize="16"
				       FontAttributes="Bold"
				       HorizontalOptions="Center"
				       VerticalOptions="Center" />
			</Border>

			<!-- Loading indicator -->
			<ActivityIndicator x:Name="LoadingIndicator"
			                   IsRunning="False"
			                   IsVisible="False"
			                   Color="#4A90E2"
			                   Margin="0,20,0,0" />

			<!-- Terms and Privacy -->
			<Label Margin="0,30,0,20">
				<Label.FormattedText>
					<FormattedString>
						<Span Text="By continuing, you agree to our "
						      TextColor="#666"
						      FontSize="12" />
						<Span Text="Terms"
						      TextColor="#4A90E2"
						      FontSize="12"
						      TextDecorations="Underline" />
						<Span Text=" and "
						      TextColor="#666"
						      FontSize="12" />
						<Span Text="Privacy Policy"
						      TextColor="#4A90E2"
						      FontSize="12"
						      TextDecorations="Underline" />
					</FormattedString>
				</Label.FormattedText>
			</Label>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
