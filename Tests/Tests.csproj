<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <RootNamespace>BluetoothMicrophoneApp.Tests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- Link DSP files directly for testing (without platform-specific dependencies) -->
    <Compile Include="..\Audio\DSP\*.cs" Link="Audio\DSP\%(Filename)%(Extension)" />

    <!-- Link Services files for testing -->
    <Compile Include="..\Services\DeviceNameManager.cs" Link="Services\%(Filename)%(Extension)" />
  </ItemGroup>

</Project>
